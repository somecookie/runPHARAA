<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userCardItemId"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="8dp"
    android:background="@drawable/rounded_corners"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ch.epfl.sweng.runpharaa.gui.RoundedCornersImageView
        android:id="@+id/profilePicId"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/unknown_person"
        app:corner_radius="250" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="USER"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleNbTracksId"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Number of tracks created"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nbTracksId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Number of tracks created" />

    </LinearLayout>

</LinearLayout>